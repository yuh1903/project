@model Project.ViewModels.DangKyVM

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Đăng Ký Tài Khoản</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="DangKy" method="post">
                <div class="form-group">
                    <label asp-for="MaTaiKhoan"></label>
                    <input type="text" class="form-control" asp-for="MaTaiKhoan" />
                    <span asp-validation-for="MaTaiKhoan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatKhau"></label>
                    <input type="password" class="form-control" asp-for="MatKhau" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MatKhauXacNhan"></label>
                    <input type="password" class="form-control" asp-for="MatKhauXacNhan" />
                    <span asp-validation-for="MatKhauXacNhan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ten"></label>
                    <input type="text" class="form-control" asp-for="Ten" />
                    <span asp-validation-for="Ten" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sdt"></label>
                    <input type="tel" class="form-control" asp-for="Sdt" />
                    <span asp-validation-for="Sdt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi"></label>
                    <input type="text" class="form-control" asp-for="DiaChi" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
